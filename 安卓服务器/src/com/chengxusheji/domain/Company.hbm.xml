<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.chengxusheji.domain">

	<class name="Company" table="Company">

          <!-- 主键公司id -->
          <id name="companyId" column="companyId">
            <generator class="native"/>
          </id>

          <!-- 简单字符串属性: 航空公司 -->
          <property
            name="companyName"
            column="companyName"
            type="string"
            length="20"
          />

          <!-- 简单字符串属性: 法人代表 -->
          <property
            name="personName"
            column="personName"
            type="string"
            length="20"
          />

          <!-- 简单字符串属性: 联系电话 -->
          <property
            name="telephone"
            column="telephone"
            type="string"
            length="20"
          />

          <!-- 简单日期型属性: 成立日期 -->
          <property
            name="bornDate"
            column="bornDate"
            	type="timestamp"
            	length="10"
          />


		 
		
	</class>
	
</hibernate-mapping>
 
