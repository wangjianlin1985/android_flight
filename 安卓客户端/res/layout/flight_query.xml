<?xml version="1.0" encoding="utf-8"?>
<ScrollView
 android:layout_width="fill_parent" 
 android:layout_height="fill_parent"
xmlns:android="http://schemas.android.com/apk/res/android">  
<LinearLayout 
	android:orientation="vertical" 
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@android:color/white">
	<include layout="@layout/title" />
	<TableLayout
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent" 
		android:stretchColumns="1">
		<TableRow> 
			<TextView 
				android:text="航班号：" 
				android:id="@+id/TV_flightNo"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:textColor="#0000ff"/>
			<EditText
				android:text="" 
				android:id="@+id/ET_flightNo"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:singleLine="true"
				android:ellipsize="end"/>
		</TableRow>
		<TableRow> 
			<TextView 
				android:text="航空公司：" 
				android:id="@+id/TV_comparyObj"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:textColor="#0000ff"/>
			<Spinner android:id="@+id/Spinner_comparyObj" 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"/>
		</TableRow>
		<TableRow> 
			<TextView 
				android:text="出发城市：" 
				android:id="@+id/TV_startCity"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:textColor="#0000ff"/>
			<Spinner android:id="@+id/Spinner_startCity" 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"/>
		</TableRow>
		<TableRow> 
			<TextView 
				android:text="到达城市：" 
				android:id="@+id/TV_arriveCity"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:textColor="#0000ff"/>
			<Spinner android:id="@+id/Spinner_arriveCity" 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"/>
		</TableRow>
		<TableRow> 
			<TextView 
				android:text="航班日期：" 
				android:id="@+id/TV_flightDate"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:textColor="#0000ff"/>
			<DatePicker
				android:id="@+id/dp_flightDate" 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="left" />
		</TableRow> 
		<TableRow>
			<TextView 
				android:text="       " 
				android:id="@+id/TextView"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:textColor="#0000ff"/>
    		<CheckBox 
    		    android:text="航班日期参与查询" 
    		    android:id="@+id/cb_flightDate" 
    		    android:layout_width="wrap_content" 
    		    android:layout_height="wrap_content"/>
		</TableRow>
	</TableLayout>
	<LinearLayout 
		android:orientation="horizontal" 
		android:layout_width="fill_parent"
		android:layout_height="55dp" 
		android:gravity="center">  
		   <Button  
				android:text="查询"
				android:id="@+id/btnQuery"
				android:layout_width="match_parent"
				android:layout_height="48dp" 
				android:layout_marginLeft="10dip"
				android:layout_marginRight="10dip"
				android:layout_marginTop="5dip"
				android:background="#D64F4D"
				android:textColor="@color/white" /> 
	</LinearLayout>
  </LinearLayout>
</ScrollView>



